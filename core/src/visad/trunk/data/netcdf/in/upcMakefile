SUBPACKAGE	= in
GARBAGE		= *.cdl

include ../../../macros.make

include ../../../rules.make

TESTS	= \
	    2332_2365.test	\
	    98101409_ruc.test	\
	    SSECImages.test	\
	    b2rlc.test	\
	    big.test	\
	    images.test	\
	    imagesNoTimeVar.test	\
	    lowresTerrain.test	\
	    lwc3rms.test	\
	    pmsl.test	\
	    rueden.test	\
	    scalar.test	\
	    small.test	\
	    smc3ars1.test	\
	    sounding.test	\
	    time.test	\
	    timeNoTimeVar.test	\
	    timeNoUnit.test

DEBUGS	= $(TESTS:.test=.debug)

test:	$(TESTS)

.SUFFIXES:	.save .run .nc
.nc.run:
	CLASSPATH=$(ROOTDIR):$$CLASSPATH $(JAVA) \
	    $(PACKAGE_PREFIX)NetcdfAdapter $<

.nc.debug:
	$(JDB) -classpath $$CLASSPATH $(PACKAGE_PREFIX)NetcdfAdapter $<

.nc.save:	FORCE
	$(MAKE) -s $*.run >$@ 2>&1

.nc.test:
	$(MAKE) -s $*.run 2>&1 | diff -cw $*.save -


$(TESTS):	NetcdfAdapter.class
$(DEBUGS):	NetcdfAdapter.class

include depend
